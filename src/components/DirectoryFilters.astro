---
const categories = [
  "Language Models",
  "Image Generation",
  "Code Assistance",
  "Audio Generation",
  "Video Generation",
  "Data Analysis"
];

const pricingOptions = [
  "Free",
  "Freemium",
  "Paid",
  "Enterprise"
];

const ratings = [
  { value: 4, label: "4+ Stars" },
  { value: 3, label: "3+ Stars" },
  { value: 2, label: "2+ Stars" }
];
---

<div class="bg-white p-4 rounded-lg shadow-sm mb-6">
  <div x-data="{ showFilters: false }" class="space-y-4">
    <div class="flex items-center justify-between">
      <button
        @click="showFilters = !showFilters"
        class="text-gray-700 flex items-center space-x-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z"
            clip-rule="evenodd"
          />
        </svg>
        <span>Filters</span>
      </button>
    </div>

    <div x-show="showFilters" x-cloak class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Categories</label>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
          {categories.map(category => (
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                :value={category}
                x-model="$parent.selectedCategories"
                class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
              />
              <span class="text-sm text-gray-600">{category}</span>
            </label>
          ))}
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Pricing</label>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          {pricingOptions.map(option => (
            <label class="flex items-center space-x-2">
              <input
                type="checkbox"
                :value={option}
                x-model="$parent.selectedPricing"
                class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
              />
              <span class="text-sm text-gray-600">{option}</span>
            </label>
          ))}
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Rating</label>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
          {ratings.map(({ value, label }) => (
            <label class="flex items-center space-x-2">
              <input
                type="radio"
                :value={value}
                x-model="$parent.minRating"
                name="rating"
                class="rounded-full border-gray-300 text-indigo-600 focus:ring-indigo-500"
              />
              <span class="text-sm text-gray-600">{label}</span>
            </label>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>